{
  "manifest_version": 3,
  "name": "Vite React Extension",
  "version": "1.0.0",
  "description": "Chrome Extension built with Vite, React, Tailwind CSS, and shadcn/ui",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "/src/popup/index.html"
  },
  "icons": {
    "128": "/icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
} 